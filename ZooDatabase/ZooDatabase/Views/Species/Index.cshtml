@model IEnumerable<ZooDatabase.Models.SpeciesModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpeciesId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeciesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEndangered)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpeciesId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeciesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEndangered)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpeciesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SpeciesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SpeciesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
